<div id="left">
	<div class="navigation">
		<%= link_to "Request Holiday", new_user_holiday_url(@user)%>	
	</div><!--end -->
</div>

<div id="right">
</div><!--end right-->

<div id="admin_pending_r" style="display:none">
	<!--#####################################-->
		<% if current_user.is_admin %>
			<%= render 	:partial => 'users/admin/pending_requests', 
						:locals => { :requests => Holiday.get_pending } %>
		<% end %>
	<!--#####################################-->
</div><!-- end admin_pending_requests-->

<div id="center">
	<h1><%=h @user.name %></h1>

	<div id="pending_requests_queue">
		<%= render 	:partial => 'users/admin/pending_requests_queue',
					:locals  => { :user => @user }%>
	</div><!--end pending_requests_queue-->

	<h2>Your Pending Requests</h2>
	<ul class="show">
		<% @user.holidays.each do |holiday|%>
			<% if holiday.state.zero?%>
			<li>
			<%= distance_of_time_in_words(holiday.begin_time, holiday.end_time ) %>
			Starting on <%= holiday.begin_time%>
			</li>
			<% end %>
		<% end %>
	</ul>

	<h2> You have used </h2>
	<ul class="show">
	<% @user.get_taken_holiday_time.each do |key,value|%>
		<li><%= value %> of <%= @user.send("max_#{key}")%> days for <%= key %></li>
	<% end %>
	</ul>

	<h2>Your History</h2>
	<div id="show_holiday_history">
		<table id="holiday_history_table" class='tablesorter'>
		<thead><tr>
		<th> submitted</th>
		<th> status </th>
		<th> description </th>
		<th> length </th>
		<th> begin date</th>
		<th> end date</th>
		</tr>
		<% @user.holidays.each do |holiday|%>
		</tr></thead>
		<%= render 	:partial => 'holidays/show_holiday_details',
					:locals  => { :holiday => holiday }%>
		</tr>
		<% end %>
		</table>
	</div><!--end show_holiday_history-->

</div><!--end inside_center-->
